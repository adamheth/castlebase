source ~/.castlebase/.colors;

#	Directory list
alias l='ls -lp'
alias ll='ls -alhF'
alias ....="cd ../../.."
alias .....="cd ../../../.."	# We're going to need a function to do this eventually
alias f="find . -name"

#
#   FUNctions
#

# grab a new file
function poke () {
    touch $1
    if [[ -e $1 ]]; then
        kod $1
    else
        echo "Couldn't create $1, sorry. \n"
    fi
}

#
#	NoCorrect
